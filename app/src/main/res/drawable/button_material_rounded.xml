<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <gradient android:angle="-90" android:startColor="#2C9CD9" android:endColor="#36AEEE"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <gradient android:angle="-90" android:startColor="#1F93D2" android:endColor="#34A7E5"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <gradient android:angle="-90" android:startColor="#058DD8" android:endColor="#029CEF" />
        </shape>
    </item>
</selector>